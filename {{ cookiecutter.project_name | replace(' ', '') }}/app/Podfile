platform :ios, '9.0'
use_frameworks!
inhibit_all_warnings!

target '{{ cookiecutter.project_name }}' do
  pod 'Instabug'
  pod 'Crashlytics'

  pod 'Alamofire'
  pod 'KeychainAccess'
  pod 'Marshal'

  pod 'BonMot'
  pod 'Anchorage'
  pod 'Swiftilities'

  target '{{ cookiecutter.project_name }}Tests' do
    pod 'OHHTTPStubs/Swift'
  end

end


pod 'SwiftGen'

post_install do |installer|
  require 'fileutils'
  FileUtils.cp_r('Pods/Target Support Files/Pods-{{ cookiecutter.project_name }}/Pods-{{ cookiecutter.project_name }}-acknowledgements.plist', '{{ cookiecutter.project_name }}/Resources/Acknowledgements.plist', :remove_destination => true)
end

