platform :ios, '10.0'
use_frameworks!
inhibit_all_warnings!

def shared
    pod 'Marshal'
    pod 'KeychainAccess'
    pod 'BonMot', :git => 'https://github.com/Raizlabs/BonMot', :branch => 'feature/zeveisenberg/xcode-10-swift-4.2'
    pod 'Alamofire'
    pod 'Anchorage', :git => 'https://github.com/Raizlabs/Anchorage', :branch => 'feature/heyltsjay/swift4.2'
    pod 'Swiftilities', :git => 'https://github.com/Raizlabs/Swiftilities', :branch => 'feature/heyltsjay/swift4_2'
end

target 'PRODUCTNAME' do
  pod 'Instabug'
  pod 'Crashlytics'

  pod 'GoogleAnalytics',   '~>3.0'
  
  pod 'SimulatorStatusMagic', :configurations => ['Debug']

  target 'PRODUCTNAMETests' do
    pod 'OHHTTPStubs/Swift'
  end

  shared()
end

target 'Services' do
    shared()
end

pod 'SwiftGen'
pod 'Sourcery', '~> 0.12.0'
pod 'SwiftLint'
